# =============================================
# VARIABLES DE ENTORNO PARA DOCKER
# =============================================
# Copiar este archivo a .env.docker y personalizar los valores

# =================================
# CONFIGURACIÓN DEL SERVIDOR
# =================================
NODE_ENV=production
PORT=3000

# =================================
# BASE DE DATOS MONGODB
# =================================
MONGO_USER=sriuser
MONGO_PASSWORD=cambiar_contraseña_en_produccion
MONGO_DB_NAME=f-sri
MONGO_PORT=27017

# =================================
# SEGURIDAD Y AUTENTICACIÓN
# =================================
# Generar con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=cambiar_con_un_valor_seguro_aleatorio_muy_largo_aqui

# Generar con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=cambiar_con_valor_seguro_de_32_caracteres_aqui

# =================================
# REGISTRO DE USUARIOS
# =================================
MASTER_REGISTRATION_KEY=cambiar_clave_maestra_produccion
ALLOWED_RUCS=
INVITATION_CODES=
DISABLE_REGISTRATION=false

# =================================
# CONFIGURACIÓN DE CORS
# =================================
# Reemplazar con tus dominios en producción
ALLOWED_ORIGINS=https://tu-dominio.com,https://www.tu-dominio.com
CORS_DISABLED=false

# =================================
# SERVICIO DE CORREO ELECTRÓNICO
# =================================
EMAIL_SERVICE=gmail
EMAIL_USER=tu_correo@gmail.com
EMAIL_PASSWORD=tu_app_password_aqui

# =================================
# INTEGRACIÓN CON SRI (ECUADOR)
# =================================
# 1 = Pruebas, 2 = Producción
SRI_ENVIRONMENT=2
SRI_RECEPCION_URL_PRUEBAS=https://celinium.sri.gob.ec/comprobantes-electronicos-ws/RecepcionComprobantesOffline?wsdl
SRI_RECEPCION_URL_PRODUCCION=https://cel.sri.gob.ec/comprobantes-electronicos-ws/RecepcionComprobantesOffline?wsdl

# =================================
# ALMACENAMIENTO DE PDFs
# =================================
# Opciones: local, cloudinary
PDF_STORAGE_PROVIDER=local

# Si usas cloudinary, proporcionar las credenciales:
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
