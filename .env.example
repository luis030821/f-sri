# =================================
# CONFIGURACIÓN DEL SERVIDOR
# =================================

# Entorno de ejecución (development, production)
NODE_ENV=development

# Puerto en el que correrá el servidor
PORT=3000

# =================================
# BASE DE DATOS
# =================================

# URI de conexión a MongoDB
# Formato: mongodb://usuario:contraseña@host:puerto/nombre_base_datos
# Ejemplo: mongodb://localhost:27017/f-sri
MONGO_URI=mongodb://localhost:27017/f-sri

# =================================
# SEGURIDAD Y AUTENTICACIÓN
# =================================

# Secreto para firmar tokens JWT (genera una cadena aleatoria segura)
# Puedes usar: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=tu_secreto_jwt_muy_seguro_aqui

# Clave de encriptación de 32 caracteres para datos sensibles
# Puedes usar: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=tu_clave_de_encriptacion_de_32_caracteres

# =================================
# REGISTRO DE USUARIOS
# =================================

# Clave maestra requerida para registrar nuevos usuarios
MASTER_REGISTRATION_KEY=tu_clave_maestra_aqui

# RUCs permitidos para registro (separados por comas)
# Ejemplo: 1234567890001,0987654321001
ALLOWED_RUCS=

# Códigos de invitación válidos (separados por comas)
# Ejemplo: INVITE001,INVITE002,INVITE003
INVITATION_CODES=

# Deshabilitar registro completamente (true/false)
DISABLE_REGISTRATION=false

# =================================
# CONFIGURACIÓN DE CORS
# =================================

# Orígenes permitidos para CORS (separados por comas)
# Ejemplo: http://localhost:4200,https://tu-dominio.com
ALLOWED_ORIGINS=http://localhost:4200

# Deshabilitar CORS completamente (true/false) - No recomendado en producción
CORS_DISABLED=false

# =================================
# SERVICIO DE CORREO ELECTRÓNICO
# =================================

# Servicio de correo (gmail, outlook, etc.)
EMAIL_SERVICE=gmail

# Usuario/correo para enviar emails
EMAIL_USER=tu_correo@gmail.com

# Contraseña o App Password del correo
# Para Gmail, usa una "Contraseña de aplicación": https://myaccount.google.com/apppasswords
EMAIL_PASSWORD=tu_contraseña_o_app_password

# =================================
# INTEGRACIÓN CON SRI (ECUADOR)
# =================================

# Ambiente del SRI (1 = Pruebas, 2 = Producción)
SRI_ENVIRONMENT=1

# URL de recepción del SRI - Ambiente de Pruebas
SRI_RECEPCION_URL_PRUEBAS=https://celinium.sri.gob.ec/comprobantes-electronicos-ws/RecepcionComprobantesOffline?wsdl

# URL de recepción del SRI - Ambiente de Producción
SRI_RECEPCION_URL_PRODUCCION=https://cel.sri.gob.ec/comprobantes-electronicos-ws/RecepcionComprobantesOffline?wsdl

# =================================
# ALMACENAMIENTO DE PDFs
# =================================

# Proveedor de almacenamiento de PDFs (cloudinary, local, s3, azure)
# Opciones:
# - cloudinary: Almacena PDFs en Cloudinary (servicio en la nube)
# - local: Almacena PDFs localmente en el servidor (default)
# - s3: Amazon S3 (no implementado aún)
# - azure: Azure Blob Storage (no implementado aún)
PDF_STORAGE_PROVIDER=local

# =================================
# CLOUDINARY (Almacenamiento de PDFs en la nube)
# =================================
# Solo necesario si PDF_STORAGE_PROVIDER=cloudinary
# Obtén tus credenciales en: https://cloudinary.com/console

# Nombre de tu cloud en Cloudinary
CLOUDINARY_CLOUD_NAME=----

# API Key de Cloudinary
CLOUDINARY_API_KEY=------

# API Secret de Cloudinary
CLOUDINARY_API_SECRET=----------

# URL completa de Cloudinary (formato alternativo - opcional)
# Formato: cloudinary://API_KEY:API_SECRET@CLOUD_NAME
CLOUDINARY_URL=cloudinary://--:----@------

