{
  "name": "f-sri",
  "version": "1.0.0",
  "description": "F Sri - Sistema de facturación electrónica para Ecuador con integración al SRI",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "prettier --check src/**/*.ts",
    "lint:fix": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm run test:ci",
    "format": "prettier --write \"src/**/*.ts\" \"__tests__/**/*.ts\""
  },
  "keywords": [
    "facturacion-electronica",
    "sri",
    "ecuador",
    "invoicing",
    "electronic-billing",
    "nodejs",
    "typescript",
    "mongodb",
    "express",
    "f-sri"
  ],
  "author": "F Sri Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/XaviMontero/f-sri.git"
  },
  "bugs": {
    "url": "https://github.com/XaviMontero/f-sri/issues"
  },
  "homepage": "https://github.com/XaviMontero/f-sri#readme",
  "dependencies": {
    "@types/axios": "^0.9.36",
    "@types/cors": "^2.8.18",
    "@types/nodemailer": "^6.4.17",
    "@types/puppeteer": "^5.4.7",
    "@xmldom/xmldom": "^0.8.10",
    "axios": "^1.12.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsbarcode": "^3.11.6",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^8.15.0",
    "node-forge": "^1.3.1",
    "nodemailer": "^7.0.7",
    "puppeteer": "^24.9.0",
    "xml-crypto": "^6.1.2",
    "xmlbuilder2": "^3.1.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.1.5",
    "@types/node-forge": "^1.3.11",
    "@types/supertest": "^2.0.12",
    "eslint-config-prettier": "^10.1.5",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.0"
  }
}
